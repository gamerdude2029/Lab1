@page
@model IndexModel
@{
    ViewData["Title"] = "Project Listing";
}

<h2>View My Projects</h2>
<select class="form-select">
    @foreach (var project in Model.ProjectInfo)
    {
        <option>@project.Title</option>
    }
</select>
<br />

<a class="btn btn-primary" href="/ProjectView/ProjectAssign">Assign a Project</a>
<br />


<h2>Project Listing</h2>


<table class="table table-bordered table-responsive table-hover">
    <thead>
        <tr>
            <th>Project ID</th>
            <th>Title</th>
            <th>Admin ID</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model.ProjectInfo)
        {
            <tr>
                <td>@project.ProjectID</td>
                <td>@project.Title</td>
                <td>@project.CreatedByAdminID</td>
                <td>@project.Status</td>
            </tr>
        }
    </tbody>
</table>